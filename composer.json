{
    "name": "pavelzanek/laravel-deepl",
    "description": "A Laravel package for integrating with the DeepL API.",
    "keywords": [
        "laravel",
        "localization",
        "translations"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pavel ZanÄ›k",
            "email": "zanek.pavel@gmail.com",
            "homepage": "https://www.pavelzanek.com/en",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2|^8.3|^8.4",
        "deeplcom/deepl-php": "^1.9",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.17",
        "orchestra/testbench": "^9.2",
        "pestphp/pest": "^2.35",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.4"
    },
    "autoload": {
        "psr-4": {
            "PavelZanek\\LaravelDeepl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PavelZanek\\LaravelDeepl\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PavelZanek\\LaravelDeepl\\LaravelDeeplServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse"
        ],
        "test": [
            "@php vendor/bin/pest"
        ]
    }
}
